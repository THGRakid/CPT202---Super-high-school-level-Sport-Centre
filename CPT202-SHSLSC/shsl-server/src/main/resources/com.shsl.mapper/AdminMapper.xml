<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shsl.mapper.AdminMapper">



    <select id="selectByPage" resultType="com.shsl.entity.Admin">
        select * from admin
        <where>
            <if test="adminName != null and adminName != ''">
                and admin_name like concat('%',#{adminName},'%')
            </if>
        </where>
        order by create_time desc
    </select>

    <update id="update" parameterType="Admin">
        update admin
        <set>
            <if test="adminName != null">admin_name = #{adminName},</if>
            <if test="depName != null">dep_name = #{depName},</if>
            <if test="password != null">password = #{password},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="createTime != null">create_Time = #{createTime},</if>
            <if test="expirationTime != null">expiration_Time = #{expirationTime},</if>
            <if test="power != null">power = #{power},</if>
        </set>
        where admin_id = #{adminId}
    </update>

    <delete id="deleteAdminByIds">
        delete from admin where admin_id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>


</mapper>
